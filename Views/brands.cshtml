<!DOCTYPE html>
<html>
  <head>
    <title>Shoe Stores</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>Here is a list of Brands we currently stock:</h1>
    @if (@Model.Count == 0)
    {
      <p>No brands have been added yet!</p>
    }
    else
    {
      <ul>
        @foreach (var brand in Model)
        {
          <li><a href="/brands/@brand.GetId()">@brand.GetName()</a></li>
        }
      </ul>
    }
      <form action="/brands/delete" method="post">
        <button type="submit">Clear all brands</button>
      </form>
    <h4><a href="/stores">View Stores</a></h4>
    <h4><a href="/brands/new">Add a Brands</a></h4>
    <h4><a href="/">Home</a></h4>
  </body>
</html>
