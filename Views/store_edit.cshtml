<!DOCTYPE html>
<html>
  <head>
    <title>Shoe Stores</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>Shoe Store</h1>
    <hr/>
    <h2>Edit: @Model.GetName()</h2>
    <form action="/store/edit/@Model.GetId()" method="post">
     <input type="hidden" name="_method" value="PATCH">
     <input type="hidden" name="store-id" value="@Model.GetId()">
     <label for="store-name">Store Name</label>
     <input type="text" name="store-name" id="store-name">
     <button type="submit">Submit</button>
   </form>
    <h4><a href="/stores">View Stores</a></h4>
    <h4><a href="/brands">View Brands</a></h4>
    <h4><a href="/">Home</a></h4>
  </body>
</html>
